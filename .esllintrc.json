{
    "extends": [
        "next/core-web-vitals",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "tabWidth": 4,
                "useTabs": false,
                "semi": true,
                "singleQuote": true,
                "trailingComma": "es5",
                "printWidth": 80
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ]
    }
}

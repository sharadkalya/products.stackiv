{
    "name": "automation",
    "version": "1.0.0",
    "description": "Automation project using Playwright and Cucumber",
    "main": "index.js",
    "author": "Priyanka",
    "license": "MIT",
    "scripts": {    
        "test": "cross-env BROWSER_NAME=chromium cucumber-js --format json:reports/cucumber_report.json",
        "report:generate": "node utils/generate-report.js",
        "test:report": "yarn test && yarn report:generate",
        "test:chromium": "cross-env BROWSER_NAME=chromium cucumber-js --format json:reports/cucumber_report.json",
        "test:firefox": "cross-env BROWSER_NAME=firefox cucumber-js --format json:reports/cucumber_report.json",
        "test:webkit": "cross-env BROWSER_NAME=webkit cucumber-js --format json:reports/cucumber_report.json"
    },
    "dependencies": {
        "@playwright/test": "^1.52.0"
    },
    "devDependencies": {
        "@cucumber/cucumber": "^11.3.0",
        "@cucumber/html-formatter": "^21.11.0",
        "allure-playwright": "^3.2.2",
        "cross-env": "^7.0.3",
        "cucumberjs-allure2-reporter": "^1.3.0",
        "playwright": "^1.52.0"
    }
}

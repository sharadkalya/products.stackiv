{
    "[yaml]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "yaml.format.indent": 4,
    // General indentation settings for all files
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    // Override specific languages explicitly for safety
    "[javascript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[typescript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[json]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "[jsonc]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "cSpell.words": [
        "stackiv"
    ],
    // ESLint configuration for monorepo
    "eslint.workingDirectories": [
        "./apps/hosts",
        "./apps/backend"
    ],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "eslint.run": "onType",
    "eslint.enable": true
}

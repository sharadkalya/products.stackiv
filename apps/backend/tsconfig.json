{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": true,
        "baseUrl": "./",
        "paths": {
            "@/middleware*": [
                "src/middleware/*"
            ],
            "@/*": [
                "src/*"
            ],
            "shared-types": [
                "../../packages/shared-types/src"
            ],
            "shared-auth": [
                "../../packages/shared-auth/src"
            ],
            "shared-config": [
                "../../packages/shared-config/src"
            ],
            "shared-i18n": [
                "../../packages/shared-i18n/src"
            ],
            "shared-i18n/server": [
                "../../packages/shared-i18n/src/server.ts"
            ]
        }
    },
    "references": [
        {
            "path": "../../packages/shared-types"
        },
        {
            "path": "../../packages/shared-auth"
        },
        {
            "path": "../../packages/shared-config"
        },
        {
            "path": "../../packages/shared-i18n"
        }
    ],
    "include": [
        "src",
        "src/types"
    ],
    "exclude": [
        "node_modules"
    ]
}

{
    "name": "backend",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --require tsconfig-paths/register src/index.ts",
        "build": "tsc -b",
        "start": "node -r ./dist/register-paths.js dist/index.js",
        "cron:dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --require tsconfig-paths/register src/cron/odooSyncCron.ts",
        "cron:start": "node --max-old-space-size=512 -r ./dist/register-paths.js dist/cron/odooSyncCron.js",
        "test:sync": "npx tsx src/cron/test-scripts/full-90day-sync.js",
        "test:verify": "npx tsx src/cron/test-scripts/verify-sync.js",
        "test:clear": "npx tsx src/cron/test-scripts/clear-data.js",
        "test:collections": "npx tsx src/cron/test-scripts/check-collections.js",
        "test:duplicates": "npx tsx src/cron/test-scripts/check-duplicates.js",
        "test:manual": "npx tsx src/cron/test-scripts/manual-process.js"
    },
    "dependencies": {
        "@pinecone-database/pinecone": "^6.1.2",
        "@types/node-cron": "^3.0.11",
        "accesscontrol": "^2.2.1",
        "apollo-server-express": "^3.13.0",
        "compromise": "^14.14.4",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "express-rate-limit": "^7.5.1",
        "firebase-admin": "^13.4.0",
        "graphql": "^16.11.0",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.15.1",
        "node-cron": "^4.2.1",
        "openai": "^5.11.0",
        "shared-types": "^1.0.0",
        "tsconfig-paths": "^4.2.0",
        "uuid": "^11.1.0",
        "xmlrpc": "^1.3.2",
        "zod": "^3.25.67"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.18",
        "@types/dotenv": "^8.2.3",
        "@types/express": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^22.15.28",
        "@types/uuid": "^10.0.0",
        "@types/xmlrpc": "^1.3.10",
        "@typescript-eslint/eslint-plugin": "^8.34.1",
        "@typescript-eslint/parser": "^8.34.1",
        "eslint": "^9.29.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.32.0",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.8.3"
    }

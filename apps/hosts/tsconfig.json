{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "./src/components/common/*"
      ],
      "@hosts/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "shared-types": [
        "../../packages/shared-types/src"
      ],
      "shared-auth": [
        "../../packages/shared-auth/src"
      ],
      "shared-config": [
        "../../packages/shared-config/src"
      ],
      "shared-i18n": [
        "../../packages/shared-i18n/src"
      ],
      "shared-i18n/server": [
        "../../packages/shared-i18n/src/server.ts"
      ],
      "shared-redux": [
        "../../packages/shared-redux/src"
      ],
      "shared-api": [
        "../../packages/shared-api/src"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

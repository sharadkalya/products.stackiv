{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "outDir": "dist",
        "composite": true,
        "declaration": true, // Add this line
        "declarationDir": "dist/types" // This is where the .d.ts files will be output
    },
    "references": [
        {
            "path": "../shared-types"
        }
    ],
    "include": [
        "src"
    ]
}
